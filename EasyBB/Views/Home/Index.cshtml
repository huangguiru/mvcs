@model List<Board>
@{
    ViewBag.Title = "首页";
   
}

<div class="jumbotron">
    <h1>黄桂茹论坛</h1>
    <p class="lead">黄桂茹日记</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">了解更多 &raquo;</a></p>
</div>

<div class="row">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-md-4">
            <h2><a href="/home/board/@Model[i].id">@Model[i].name</a></h2>
            <p>
             @Model[i].intro   
            </p>
        </div>
    }
   
</div>