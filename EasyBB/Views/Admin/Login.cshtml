
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>管理员登录</h2>
<form method="post" action="/Admin/login">
    <div class="form-group">
        <label for="exampleInputEmail1">账号</label>
        <input type="text" name="name" class="form-control" id="exampleInputEmail1" placeholder="账号">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">密码</label>
        <input type="password" name="pwd" class="form-control" id="exampleInputPassword1" placeholder="密码">
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">验证码</label>
        <input type="text" name="validatecode" class="form-control" id="exampleInputValidatecode" placeholder="验证码">
    </div>

    <button type="submit" class="btn btn-default">登录</button>
</form>
