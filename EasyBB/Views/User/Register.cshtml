@model EasyBB.Models.ViewModels.UserRegistViewModel
@{
    ViewBag.Title = "注册";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>用户注册</h2>

@*<form method="post" action="/User/register">*@
<form method="post" >
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
        @*<label for="exampleInputEmail1">账号</label>
            <input type="text" name="name" class="form-control" id="exampleInputEmail1" placeholder="账号">*@
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
        @*<label for="exampleInputEmail1">邮箱</label>
            <input type="text" name="email" class="form-control" id="exampleInputEmail1" placeholder="邮箱">*@
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Pwd)
        @Html.PasswordFor(m => m.Pwd, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Pwd)
        @*<label for="exampleInputPassword1">密码</label>
            <input type="password" name="pwd" class="form-control" id="exampleInputPassword1" placeholder="密码">*@
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CPwd)
        @Html.PasswordFor(m => m.CPwd, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CPwd)
        @*<label for="exampleInputPassword1">确认密码</label>
            <input type="password" name="cpwd" class="form-control" id="exampleInputPassword1" placeholder="确认密码">*@
    </div>
    <button type="submit" class="btn btn-default">注册</button>
</form>
@Scripts.Render("~/bundles/jqueryval")